<h1>Manage Types</h1>

<h2>Browse Types</h2>
<table border="1">
  <tr>
    <th>Type ID</th>
    <th>Type Name</th>
    <th>Description</th>
    <th>Strong Against</th>
    <th>Weak Against</th>
  </tr>

  {{#each rows}}
  <tr>
    <td>{{this.type_id}}</td>
    <td>{{this.type_name}}</td>
    <td>{{this.description}}</td>
    <td>{{this.strong_against}}</td>
    <td>{{this.weak_against}}</td>
  </tr>
  {{/each}}
</table>

<hr>

<h2>Add Type</h2>
<form>
  <label>Type Name:</label>
  <input type="text" name="type_name" required />
  <br><br>

  <label>Description:</label>
  <input type="text" name="description" />
  <br><br>

  <label>Strong Against:</label>
  <input type="text" name="strong_against" />
  <br><br>

  <label>Weak Against:</label>
  <input type="text" name="weak_against" />
  <br><br>

  <button type="submit">Add Type</button>
</form>

<hr>

<h2>Update Type</h2>
<form>

  <label>Select Type:</label>
  <select name="type_id" required>
    {{#each rows}}
      <option value="{{this.type_id}}">
        {{this.type_name}} (ID: {{this.type_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Type Name:</label>
  <input type="text" name="type_name" />
  <br><br>

  <label>Description:</label>
  <input type="text" name="description" />
  <br><br>

  <label>Strong Against:</label>
  <input type="text" name="strong_against" />
  <br><br>

  <label>Weak Against:</label>
  <input type="text" name="weak_against" />
  <br><br>

  <button type="submit">Update Type</button>
</form>

<hr>

<h2>Delete Type</h2>
<form>

  <label>Select Type:</label>
  <select name="type_id" required>
    {{#each rows}}
      <option value="{{this.type_id}}">
        {{this.type_name}} (ID: {{this.type_id}})
      </option>
    {{/each}}
  </select>

  <button type="submit">Delete Type</button>
</form>