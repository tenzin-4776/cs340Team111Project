      <option value="{{this.location_id}}">
        {{this.location_name}} (ID {{this.location_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Capture Date:</label>
  <input type="date" name="capture_date" />
  <br><br>

  <label>Status:</label>
  <input type="text" name="capture_status" />
  <br><br>

  <button type="submit">Update</button>
</form>

