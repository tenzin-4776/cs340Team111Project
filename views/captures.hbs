<h1>Manage Captures</h1>

<h2>Browse Captures</h2>
<table border="1">
  <tr>
    <th>Capture ID</th>
    <th>Pokemon</th>
    <th>Trainer</th>
    <th>Location</th>
    <th>Capture Date</th>
    <th>Status</th>
  </tr>
  {{#each rows}}
  <tr>
    <td>{{this.capture_id}}</td>
    <td>{{this.pokemon_label}}</td>
    <td>{{this.trainer_label}}</td>
    <td>{{this.location_label}}</td>
    <td>{{this.capture_date}}</td>
    <td>{{this.capture_status}}</td>
  </tr>
  {{/each}}
</table>

<hr>

<h2>Add Capture</h2>
<form>
  <label>Pokemon:</label>
  <select name="pokemon_id" required>
    <option value="">-- Select --</option>
    {{#each pokemon}}
      <option value="{{this.pokemon_id}}">
        {{this.pokemon_name}} (ID {{this.pokemon_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Trainer:</label>
  <select name="trainer_id" required>
    <option value="">-- Select --</option>
    {{#each trainers}}
      <option value="{{this.trainer_id}}">
        {{this.trainer_name}} (ID {{this.trainer_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Location:</label>
  <select name="location_id" required>
    <option value="">-- Select --</option>
    {{#each locations}}
      <option value="{{this.location_id}}">
        {{this.location_name}} (ID {{this.location_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Capture Date:</label>
  <input type="date" name="capture_date" required />
  <br><br>

  <label>Status:</label>
  <input type="text" name="capture_status" required />
  <br><br>

  <button type="submit">Add</button>
</form>

<hr>

<h2>Update Capture</h2>
<form>
  <label>Select Capture:</label>
  <select name="capture_id" required>
    <option value="">-- Select --</option>
    {{#each rows}}
      <option value="{{this.capture_id}}">
        Capture {{this.capture_id}} — {{this.pokemon_label}} / {{this.trainer_label}}
      </option>
    {{/each}}
