<h1>Manage Captures</h1>

<h2>Browse Captures</h2>
<table border="1">
  <tr>
    <th>capture_id</th>
    <th>pokemon_id</th>
    <th>pokemon_name</th>
    <th>trainer_id</th>
    <th>location_id</th>
    <th>capture_date</th>
    <th>capture_status</th>
  </tr>
  {{#each rows}}
  <tr>
    <td>{{this.capture_id}}</td>
    <td>{{this.pokemon_id}}</td>
    <td>{{this.pokemon_name}}</td>
    <td>{{this.trainer_id}}</td>
    <td>{{this.location_id}}</td>
    <td>{{this.capture_date}}</td>
    <td>{{this.capture_status}}</td>
  </tr>
  {{/each}}
</table>

<hr>

<h2>Add Capture</h2>
<form>
  <label>pokemon_id:</label>
  <select name="pokemon_id" required>
    {{#each pokemon}}
      <option value="{{this.pokemon_id}}">
        {{this.pokemon_name}} ({{this.pokemon_id}})
      </option>
    {{/each}}
  </select><br><br>

  <label>pokemon_name:</label>
  <input type="text" name="pokemon_name" required /><br><br>

  <label>trainer_id:</label>
  <select name="trainer_id" required>
    {{#each trainers}}
      <option value="{{this.trainer_id}}">
        {{this.trainer_name}} ({{this.trainer_id}})
      </option>
    {{/each}}
  </select><br><br>

  <label>location_id:</label>
  <select name="location_id" required>
    {{#each locations}}
      <option value="{{this.location_id}}">
        {{this.location_name}} ({{this.location_id}})
      </option>
    {{/each}}
  </select><br><br>

  <label>capture_date:</label>
  <input type="date" name="capture_date" required /><br><br>

  <label>capture_status:</label>
  <input type="text" name="capture_status" required /><br><br>

  <button type="submit">Add</button>
</form>

<hr>

<h2>Update Capture</h2>
<form>
  <label>capture_id:</label>
  <input type="number" name="capture_id" required /><br><br>

  <label>pokemon_id:</label>
  <input type="number" name="pokemon_id" /><br><br>

  <label>pokemon_name:</label>
  <input type="text" name="pokemon_name" /><br><br>

  <label>trainer_id:</label>
  <input type="number" name="trainer_id" /><br><br>

  <label>location_id:</label>
  <input type="number" name="location_id" /><br><br>

  <label>capture_date:</label>
  <input type="date" name="capture_date" /><br><br>

  <label>capture_status:</label>
  <input type="text" name="capture_status" /><br><br>

  <button type="submit">Update</button>
</form>

<hr>

<h2>Delete Capture</h2>
<form>
  <label>capture_id:</label>
  <input type="number" name="capture_id" required />
  <button type="submit">Delete</button>
</form>
