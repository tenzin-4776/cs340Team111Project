<h1>Manage Pokémon</h1>

<h2>Browse Pokémon</h2>
<table border="1">
  <tr>
    <th>Pokemon ID</th>
    <th>Type</th>
    <th>Pokemon Name</th>
    <th>Level</th>
    <th>Shiny?</th>
    <th>Can Evolve?</th>
    <th>Evolution Stage</th>
    <th>Category</th>
  </tr>

  {{#each rows}}
  <tr>
    <td>{{this.pokemon_id}}</td>

    <td>
      {{#if this.type_name}}
        {{this.type_name}}
      {{else}}
        {{this.type_id}}
      {{/if}}
    </td>

    <td>{{this.pokemon_name}}</td>
    <td>{{this.level}}</td>
    <td>{{this.shiny_status}}</td>
    <td>{{this.can_evolve}}</td>
    <td>{{this.evolution_stage}}</td>
    <td>{{this.category}}</td>
  </tr>
  {{/each}}
</table>

<hr>

<h2>Add Pokémon</h2>
<form method="POST" action="/pokemon/add">
  <label>Type:</label>
  <select name="type_id" required>
    {{#each types}}
      <option value="{{this.type_id}}">{{this.type_name}}</option>
    {{/each}}
  </select>
  <br><br>

  <label>Pokemon Name:</label>
  <input type="text" name="pokemon_name" required />
  <br><br>

  <label>Level:</label>
  <input type="number" name="level" min="0" required />
  <br><br>

  <label>Shiny Status:</label>
  <select name="shiny_status" required>
    <option value="0">0 - No</option>
    <option value="1">1 - Yes</option>
  </select>
  <br><br>

  <label>Can Evolve:</label>
  <select name="can_evolve" required>
    <option value="0">0 - No</option>
    <option value="1">1 - Yes</option>
  </select>
  <br><br>

  <label>Evolution Stage:</label>
  <select name="evolution_stage" required>
    <option value="0">0</option>
    <option value="1">1</option>
    <option value="2">2</option>
  </select>
  <br><br>

  <label>Category:</label>
  <input type="text" name="category" />
  <br><br>

  <button type="submit">Add</button>
</form>

<hr>

<h2>Update Pokémon</h2>
<form method="POST" action="/pokemon/update">

  <label>Select Pokémon:</label>
  <select name="pokemon_id" required>
    {{#each rows}}
      <option value="{{this.pokemon_id}}">
        {{this.pokemon_name}} (ID: {{this.pokemon_id}})
      </option>
    {{/each}}
  </select>
  <br><br>

  <label>Type:</label>
  <select name="type_id">
    <option value="">-- No Change --</option>
    {{#each types}}
      <option value="{{this.type_id}}">{{this.type_name}}</option>
    {{/each}}
  </select>
  <br><br>

  <label>Pokemon Name:</label>
  <input type="text" name="pokemon_name" />
  <br><br>

  <label>Level:</label>
  <input type="number" name="level" min="0" />
  <br><br>

  <label>Shiny Status:</label>
  <select name="shiny_status">
    <option value="">-- No Change --</option>
    <option value="0">0 - No</option>
    <option value="1">1 - Yes</option>
  </select>
  <br><br>

  <label>Can Evolve:</label>
  <select name="can_evolve">
    <option value="">-- No Change --</option>
    <option value="0">0 - No</option>
    <option value="1">1 - Yes</option>
  </select>
  <br><br>

  <label>Evolution Stage:</label>
  <select name="evolution_stage">
    <option value="">-- No Change --</option>
    <option value="0">0</option>
    <option value="1">1</option>
    <option value="2">2</option>
  </select>
  <br><br>

  <label>Category:</label>
  <input type="text" name="category" />
  <br><br>

  <button type="submit">Update</button>
</form>

<hr>

<h2>Delete Pokémon</h2>
<form method="POST" action="/pokemon/delete">
  <label>Select Pokémon:</label>
  <select name="pokemon_id" required>
    {{#each rows}}
      <option value="{{this.pokemon_id}}">
        {{this.pokemon_name}} (ID: {{this.pokemon_id}})
      </option>
    {{/each}}
  </select>
  <button type="submit">Delete</button>
</form>
